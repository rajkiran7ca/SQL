CREATE TABLE SRM(
ID INT PRIMARY KEY NOT NULL ,
NAME VARCHAR (20),
ROLE VARCHAR(30),
DEPARTMENT VARCHAR(20),
SALARY INT 
);
INSERT INTO SRM VALUES(1,'KARTHICK','HEAD','AUDITING',75000),
(2,'RAJA','MANAGER','AUDITING',60000);
SELECT * FROM SRM;
ALTER TABLE SRM ADD LOCATION VARCHAR(20);
ALTER TABLE SRM ADD AGE INT, 
                ADD POSITION VARCHAR(20);
ALTER TABLE SRM RENAME TO GOOD_FOODS;
INSERT INTO GOOD_FOODS  VALUES(3,'LOURDU','ASSISTAND MANAGER','ACCOUNTS',45000,'TRICHY',45),
                              (4,'MADAN','SENIOR ACCOUNTANT ','ACCOUNTS',25000,'THANJAVUR',25),
                              (5,'SELVAM','SENIOR ACCOUNTANT ','ACCOUNTS',25000,'TRICHY',25);
SELECT * FROM GOOD_FOODS;

CREATE TABLE PHARMACY(
ID INT PRIMARY KEY NOT NULL ,
NAME VARCHAR (30),
ROLE VARCHAR (30),
DEPARTMENT VARCHAR(30),
SALRY INT ,
LOCATION VARCHAR (20));

INSERT INTO PHARMACY  VALUES (1,'DURGA','ACCOUNTANT','ACCOUNTS',12000),
(2,'PRABHA','ACCOUNTANT','ACCOUNTS',12000);
SELECT * FROM PHARMACY;

CREATE TABLE REPROGRAPHICS (
ID INT PRIMARY KEY NOT NULL ,
NAME VARCHAR (20),
ROLE VARCHAR (30),
DEPARTMENT VARCHAR(20),
SALARY INT ,
LOCATION VARCHAR(20));

INSERT INTO REPROGRAPHICS VALUES(1,'SAAMIVEL','AUDITOR','AUDITING',25000,'TRICHY'),
                                (2,'SOWMIYA','AUDITOR','AUDITING',12000,'THAJAVUR');
SELECT * FROM REPROGRAPHICS ;

UPDATE GOOD_FOODS SET LOCATION = 'THANJAVUR' , AGE = 42 
WHERE NAME = 'KARTHICK' ;
SELECT * FROM GOOD_FOODS;

UPDATE  GOOD_FOODS SET LOCATION = 'TRICHY' ,AGE = 38
WHERE NAME = 'RAJA';
SELECT * FROM GOOD_FOODS;
SELECT * FROM GOOD_FOODS ORDER BY  ID ASC;

SELECT NAME, DEPARTMENT , SALARY FROM GOOD_FOODS ; 
SELECT DEPARTMENT , AVG (SALARY) FROM GOOD_FOODS GROUP BY DEPARTMENT;
SELECT LOCATION FROM GOOD_FOODS GROUP BY LOCATION;
SELECT NAME FROM GOOD_FOODS WHERE LOCATION = 'THANJAVUR';
SELECT NAME ,AGE  FROM GOOD_FOODS WHERE AGE <= 30;

SELECT NAME,AGE,DEPARTMENT FROM GOOD_FOODS WHERE AGE>=30 AND LOCATION = 'TRICHY';

ALTER TABLE GOOD_FOODS RENAME TO GF;

SELECT * FROM PHARMACY ;
ALTER TABLE PHARMACY ADD AGE INT;
UPDATE PHARMACY SET LOCATION =  'TRICHY' WHERE NAME = 'DURGA';
UPDATE PHARMACY SET AGE = 31 WHERE NAME ='DURGA';
UPDATE PHARMACY SET AGE =25, LOCATION= 'THANJAVUR'
       WHERE NAME ='PRABHA';
SELECT DISTINCT ROLE FROM GF;
SELECT COUNT(ROLE) FROM GF; 
SELECT * FROM GF ;




            
